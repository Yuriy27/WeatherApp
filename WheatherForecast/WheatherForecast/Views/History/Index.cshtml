@model IEnumerable<WheatherForecast.Models.ForecastEntity>
@{
    ViewBag.Title = "Index";
}

<h2>History</h2>

<div>
    <hr />
    <table class="table">
        <tr>
            <th class="frc-td"><img src="~/Images/icons/date.png" class="w-icon" /> Date</th>
            <th class="frc-td"><img src="~/Images/icons/city.png" class="w-icon" /> City</th>
            <th class="frc-td"><img src="~/Images/icons/pressure.png" class="w-icon" /> Pressure</th>
            <th class="frc-td"><img src="~/Images/icons/humidity.png" class="w-icon" /> Humidity</th>
            <th class="frc-td"><img src="~/Images/icons/morning.png" class="w-icon" /> T. morn</th>
            <th class="frc-td"><img src="~/Images/icons/day.png" class="w-icon" /> T. day</th>
            <th class="frc-td"><img src="~/Images/icons/evening.png" class="w-icon" /> T. even</th>
            <th class="frc-td"><img src="~/Images/icons/night.png" class="w-icon" /> T. night</th>
            <th class="frc-td"><img src="~/Images/icons/wind.png" class="w-icon" /> Wind</th>
            <th class="frc-td"><img src="~/Images/icons/description.png" class="w-icon" /> Desc</th>
            <th class="frc-td">Icon</th>
        </tr>
        @foreach (var forecast in Model)
        {
            var @iconPath = $"http://openweathermap.org/img/w/{forecast.Icon}.png";

            <tr style="margin-top:15px">
                <td class="frc-td">@forecast.Date.ToShortDateString()</td>
                <td class="frc-td">@Html.ActionLink(@forecast.City, "Index", "Weather", new {City = forecast.City, Days = 7 })</td>
                <td class="frc-td">@forecast.Pressure</td>
                <td class="frc-td">@forecast.Humidity</td>
                <td class="frc-td">@forecast.TemperatureMorning</td>
                <td class="frc-td">@forecast.TemperatureDay</td>
                <td class="frc-td">@forecast.TemperatureEvening</td>
                <td class="frc-td">@forecast.TemperatureNight</td>
                <td class="frc-td">@forecast.WindSpeed</td>
                <td class="frc-td">@forecast.Description</td>
                <td class="frc-td"><img src="@iconPath" /></td>
            </tr>
        }
    </table>

</div>
