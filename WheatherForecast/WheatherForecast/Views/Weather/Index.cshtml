@model WheatherForecast.Models.ForecastObject

@helper DrawDayNumbers()
{
    <br />
    <div class="radio">
        <label><input type="radio" name="days" value="1">1 day</label>
    </div>
    <div class="radio">
        <label><input type="radio" name="days" value="3">3 days</label>
    </div>
    <div class="radio disabled">
        <label><input type="radio" name="days" value="7">7 days</label>
    </div>

    <input class="btn btn-success" type="submit" value="See Forecast" />
}

@{
    ViewBag.Title = "Index";
    var cityName = Model == null ? "" : Model.city.Name;
    var cnt = Model == null ? 0 : Model.cnt;
}
<div>
    <div>
        <h2>Smart Weather</h2>
    </div>
    <div class="row">
        <div class="col-md-3">
            <form action="/Weather/Index" method="post">
                <select name="city" class="form-control">
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city" class="form-control">@city</option>
                    }
                </select> 
                
                @DrawDayNumbers()
            </form>
        </div>
        <div class="col-md-3">
            <form action="/Weather/Index" method="post">
                <input type="text" class="form-control" name="city" placeholder="Enter city name.." />

                @DrawDayNumbers()
            </form>
        </div>
    </div>
    <div>
        
    </div>
    @if (Model != null)
    {
        @Html.Partial("ForecastView", Model);
    }
</div>



